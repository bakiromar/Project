<!DOCTYPE html>
<html>

	<head>
		<meta charset='utf-8'>
		<title>Home</title>
		<link href='home_style.css' rel='stylesheet' type='text/css'/>
	</head>

	<body>
		
		{{> navbar}}

		<div id='logo' class='text'>
			<div class='logoText'>
				<h1>Welcome {{email}}</h1>
			</div>
		</div>
		<div class="outermain">
			<div class="innermain">
				<div class='text'>
					<form>
						<h3 style="text-align: center;"><b>Your Shopping Lists:</b></h3>
						<div id='createList'>
							<input id='chooseList' placeholder='Enter a list' />
							<button id='addList'></button>
							<button id='delList'></button>
						</div>
					</form>
				</div>
				<div>
					<ul class = "indent">
					{{#each lists as |list|}}
						<form action='/listsPage' method='get'>
							<il><input class='item' type='submit' value='{{list.name}}'></il>
							<!-- <li class = "addlist"><a href = "addlist.html"><h3>Create New List</h3></a></li> -->
						</form>
					{{else}}
						<button><a href='/listsPage'>New List</a></button>
					{{/each}}
					</ul>
				</div>
			</div>
		</div>
		
	</body>
</html>